---
import Swiper from 'swiper';
    import 'swiper/swiper-bundle.min.css';
    
    let swiperInstance;
    
    onMount(() => {
      swiperInstance = new Swiper('.swiper-container', {
        loop: true,
        slidesPerView: 'auto',
        spaceBetween: 20, // Adjust this value for your desired gap between logos
        centeredSlides: true,
      });
    });
    
    onCleanup(() => {
      if (swiperInstance) {
        swiperInstance.destroy();
      }
    });

